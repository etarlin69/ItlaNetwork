@model RegisterViewModel
@{
    Layout = null;
    ViewData["Title"] = "Registro";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ItlaNetwork</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="[https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css](https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css)" />
    <link rel="stylesheet" href="~/css/account-styles.css" asp-append-version="true" />
</head>
<body class="account-body">

    <div class="login-card register-card">
        <img src="~/images/logo-itlanetwork.png" alt="Logo ItlaNetwork" class="account-logo" />
        <div class="text-center mb-4">
            <h2 class="text-uppercase">Crear una Cuenta</h2>
        </div>

        @if (Model != null && Model.HasError)
        {
            <div class="alert alert-danger bg-danger text-white border-0" role="alert">
                @Model.Error
            </div>
        }

        <form asp-controller="Account" asp-action="Register" method="post" class="p-2" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="input-group-icon">
                        <i class="fa-solid fa-address-card input-icon"></i>
                        <input asp-for="FirstName" type="text" class="form-control" placeholder=" " />
                        <label asp-for="FirstName">Nombre</label>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6 mb-4">
                    <div class="input-group-icon">
                        <i class="fa-solid fa-address-card input-icon"></i>
                        <input asp-for="LastName" type="text" class="form-control" placeholder=" " />
                        <label asp-for="LastName">Apellido</label>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="input-group-icon mb-4">
                <i class="fa-solid fa-user input-icon"></i>
                <input asp-for="UserName" type="text" class="form-control" placeholder=" " />
                <label asp-for="UserName">Nombre de usuario</label>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="input-group-icon mb-4">
                <i class="fa-solid fa-envelope input-icon"></i>
                <input asp-for="Email" type="email" class="form-control" placeholder=" " />
                <label asp-for="Email">Correo Electrónico</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            @* --- CAMPO AÑADIDO --- *@
            <div class="input-group-icon mb-4">
                <i class="fa-solid fa-phone input-icon"></i>
                <input asp-for="Phone" type="tel" class="form-control" placeholder=" " />
                <label asp-for="Phone">Teléfono</label>
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="input-group-icon mb-4">
                <i class="fa-solid fa-lock input-icon"></i>
                <input asp-for="Password" type="password" class="form-control" placeholder=" " />
                <label asp-for="Password">Contraseña</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="input-group-icon mb-4">
                <i class="fa-solid fa-lock input-icon"></i>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder=" " />
                <label asp-for="ConfirmPassword">Confirmar Contraseña</label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="d-grid mt-5">
                <button class="btn btn-login" type="submit">Registrarse</button>
            </div>
        </form>

        <div class="mt-4 text-center register-link">
            <p class="mb-0 text-white-50">¿Ya tienes una cuenta? <a asp-action="Login">Inicia Sesión</a></p>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>