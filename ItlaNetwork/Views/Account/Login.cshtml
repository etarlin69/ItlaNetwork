@model ItlaNetwork.Core.Application.ViewModels.Account.LoginViewModel
@{
    Layout = null;
    ViewData["Title"] = "Iniciar Sesión";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ItlaNetwork</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/account-styles.css" asp-append-version="true" />
</head>
<body class="account-body">

    <div class="login-card">
        <img src="~/images/logo-itlanetwork.png" alt="Logo ItlaNetwork" class="account-logo" />
        <div class="text-center mb-5">
            <h2 class="text-uppercase">Iniciar Sesión</h2>
        </div>

        @if (Model.HasError)
        {
            <div class="alert alert-danger bg-danger text-white border-0" role="alert">
                @Model.Error
            </div>
        }

        <form asp-controller="Account" asp-action="Login" method="post">

            <div class="input-group-icon mb-4">
                <i class="fa-solid fa-user input-icon"></i>
                <input asp-for="UserName" type="text" class="form-control" placeholder=" " />
                <label asp-for="UserName">Nombre de Usuario</label>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="input-group-icon mb-4">
                <i class="fa-solid fa-lock input-icon"></i>
                <input asp-for="Password" type="password" class="form-control" placeholder=" " />
                <label asp-for="Password">Contraseña</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="d-grid mt-5">
                <button class="btn btn-login" type="submit">Login</button>
            </div>
        </form>

        <div class="mt-4 text-center register-link">
            <p class="mb-0 text-white-50">¿No tienes una cuenta? <a asp-action="Register">Regístrate</a></p>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>