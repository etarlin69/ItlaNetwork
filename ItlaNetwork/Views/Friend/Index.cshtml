@using ItlaNetwork.Core.Application.ViewModels.Friendship
@model List<FriendViewModel>
@{
    ViewData["Title"] = "Amigos";
}

<div class="container main-container">
    <div class="row">
        <div class="col-lg-8">

            <h4 class="text-white mb-3">Publicaciones de tus amigos</h4>
            <div class="feed-container">
                <div class="text-center text-white-50 mt-5">
                    <h4>Próximamente...</h4>
                    <p>Aquí verás las publicaciones de tus amigos.</p>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="glass-card mt-5 mt-lg-0">
                <h5 class="text-white border-bottom border-secondary pb-2 mb-3">Tu lista de amigos</h5>
                @if (!Model.Any())
                {
                    <p class="text-center text-white-50">Aún no tienes amigos. ¡Envía una solicitud!</p>
                }
                else
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var friend in Model)
                        {
                            <li class="list-group-item bg-transparent user-list-item text-white">
                                <div class="profile-pic-container" style="width: 50px; height: 50px;">
                                    @if (!string.IsNullOrEmpty(friend.ProfilePictureUrl))
                                    {
                                        <img src="@friend.ProfilePictureUrl" alt="Foto de @friend.UserName" class="profile-pic" />
                                    }
                                    else
                                    {
                                        <i class="fa-solid fa-user-astronaut profile-pic-default"></i>
                                    }
                                </div>
                                <div class="user-info">
                                    <div class="user-name">@friend.FirstName @friend.LastName</div>
                                    <div class="user-details">@friend.UserName</div>
                                </div>
                                <form asp-action="Delete" method="post" onsubmit="return confirm('¿Estás seguro de que quieres eliminar a este amigo?');">
                                    <input type="hidden" name="id" value="@friend.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></button>
                                </form>
                            </li>
                        }
                    </ul>
                }
            </div>
        </div>
    </div>
</div>