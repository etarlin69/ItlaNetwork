@using ItlaNetwork.Core.Application.ViewModels.Post
@model SavePostViewModel

<div class="glass-card">
    <form asp-controller="Post" asp-action="Create" method="post" enctype="multipart/form-data">
        @* Token antifalsificación *@
        @Html.AntiForgeryToken()

        @* Resumen global de errores *@
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="mb-3">
            @* Placeholder dinámico con el nombre de usuario *@
            <textarea asp-for="Content"
                      class="form-control"
                      rows="3"
                      placeholder="¿Qué estás pensando, @User.Identity.Name?"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between align-items-center">
            <div>
                <label for="formFile" class="btn btn-sm btn-file-upload">
                    <i class="fa-solid fa-image"></i> Foto
                </label>
                <input asp-for="ImageFile"
                       class="form-control d-none"
                       type="file"
                       id="formFile" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-gradient">Publicar</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
